{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "banner",
            "custominfo",
            "mapnavigation",
            "legend",
            "scalebar",
            "locateme",
            "dn_relatedtables"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "popups": {
            "Config": {
                "defaultPopupType": "related-tables-popup",
                "defaultPopupEnabled": true,
                "highlightEnabled": true,
                "autoCloseEnabled": false,
                "collapseEnabled": false,
                "dockingForced": true,
                "dockingDisabled": false,
                "dockEnabled": false,
                "dockPosition": "auto",
                "dockButtonEnabled": true,
                "dockBreakpoint": true
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "customInfoTool",
                    "activateOnStartup": true,
                    "title": "Information",
                    "tooltip": "Information",
                    "iconClass": "icon-custom-info-info",
                    "toolClass": "ctInfo",
                    "togglable": true,
                    "widgetSettings": {
                        "content": "This app shows the functionality of the Related Tables bundle that provides a special popup that shows related table data.",
                        "window": {
                            "title": "Information",
                            "marginBox": {
                                "w": 300,
                                "h": 140,
                                "l": 20,
                                "b": 120
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": false,
                            "maximizable": false,
                            "resizable": false
                        }
                    }
                }
            ]
        },
        "map-init": {
            "Config": {
                "map": {
                    "layers": [
                        {
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/stoerung_relates/MapServer",
                            "type": "AGS_DYNAMIC",
                            "title": "Störungen",
                            "sublayers": [
                                {
                                    "id": 0,
                                    "title": "Störungen",
                                    "visible": true,
                                    "popupTemplate": {
                                        "popupType": "related-tables-popup"
                                    }
                                }
                            ]
                        }
                    ],
                    "basemap": "streets",
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 831102.7179493543,
                        "ymin": 6783090.505371286,
                        "xmax": 867792.4915261895,
                        "ymax": 6802085.106900126,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
