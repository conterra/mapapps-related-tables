{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "banner",
            "custominfo",
            "mapnavigation",
            "legend",
            "scalebar",
            "locateme",
            "dn_popups-action-maximize",
            "dn_relatedtables"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_relatedtables": {
            "Config": {
                "relationNameReplacer": [
                    {
                        "name": "Aktivitäten",
                        "newName": "Störungsaktivitäten"
                    }
                ],
                "filterAttributesMode": "deny",
                "filterAttributesList": [
                    "OBJECTID"
                ]
            }
        },
        "popups": {
            "Config": {
                "defaultPopupType": "related-tables-popup",
                "defaultPopupEnabled": true,
                "highlightEnabled": true,
                "autoCloseEnabled": false,
                "collapseEnabled": false,
                "dockingForced": true,
                "dockingDisabled": false,
                "dockEnabled": false,
                "dockPosition": "auto",
                "dockButtonEnabled": true,
                "dockBreakpoint": true
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "customInfoTool",
                    "activateOnStartup": true,
                    "title": "Information",
                    "tooltip": "Information",
                    "iconClass": "icon-custom-info-info",
                    "toolClass": "ctInfo",
                    "togglable": true,
                    "widgetSettings": {
                        "content": "${appInfo}",
                        "window": {
                            "title": "Information",
                            "marginBox": {
                                "w": 300,
                                "h": 140,
                                "l": 20,
                                "b": 120
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": false,
                            "maximizable": false,
                            "resizable": false
                        }
                    }
                }
            ]
        },
        "map-init": {
            "Config": {
                "map": {
                    "basemap": "gray-vector",
                    "layers": [
                        {
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/stoerung_relates/MapServer",
                            "type": "AGS_DYNAMIC",
                            "title": "Störungen",
                            "sublayers": [
                                {
                                    "id": 0,
                                    "title": "Störungen",
                                    "visible": true,
                                    "renderer": {
                                        "type": "simple",
                                        "symbol": {
                                            "type": "simple-marker",
                                            "color": [
                                                255,
                                                0,
                                                0,
                                                0.6
                                            ],
                                            "size": 16,
                                            "outline": {
                                                "color": [
                                                    0,
                                                    0,
                                                    0,
                                                    0.4
                                                ],
                                                "width": 0.5
                                            }
                                        }
                                    },
                                    "popupTemplate": {
                                        "popupType": "related-tables-popup",
                                        "customActions": [
                                            "maximize-popup"
                                        ],
                                        "title": "Störung",
                                        "content": [
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "details",
                                                        "label": "Details"
                                                    },
                                                    {
                                                        "fieldName": "melder",
                                                        "label": "Melder"
                                                    },
                                                    {
                                                        "fieldName": "status",
                                                        "label": "Status"
                                                    },
                                                    {
                                                        "fieldName": "zeitpunkt",
                                                        "label": "Zeitpunkt",
                                                        "format": {
                                                            "dateFormat": "day-short-month-year"
                                                        }
                                                    },
                                                    {
                                                        "fieldName": "kommentar",
                                                        "label": "Kommentar"
                                                    }
                                                ]
                                            }
                                        ],
                                        "relatedRecordTemplates": {
                                            "2": {
                                                "content": [
                                                    {
                                                        "type": "fields",
                                                        "fieldInfos": [
                                                            {
                                                                "fieldName": "Name",
                                                                "label": "Bearbeiter"
                                                            },
                                                            {
                                                                "fieldName": "Aktivität",
                                                                "label": "Aktivität"
                                                            },
                                                            {
                                                                "fieldName": "Datum",
                                                                "label": "Bearbeitungsdatum"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        },
                                        "footerContent": [
                                            {
                                                "type": "text",
                                                "text": "<hr/>\ncreated by <b>con terra</b>"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 831102.7179493543,
                        "ymin": 6783090.505371286,
                        "xmax": 867792.4915261895,
                        "ymax": 6802085.106900126,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
